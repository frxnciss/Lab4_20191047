<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Tele-Fútbol"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/sportImage1"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Imagen de fútbol"
            android:src="@drawable/futbol_img1" />

        <ImageView
            android:id="@+id/sportImage2"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="Otra imagen de fútbol"
            android:src="@drawable/futbol_img2" />

        <Button
            android:id="@+id/enterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/app"
            android:padding="12dp"
            android:text="  Ingresar  "
            android:textSize="30dp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/authorInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Francis Estela Lozano / 20191047"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
